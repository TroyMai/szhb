# 服务器配置
PORT=5000
NODE_ENV=development

# MySQL 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=szhb
DB_USER=root
DB_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# 加密配置
BCRYPT_ROUNDS=10

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 跨域配置（多个地址用逗号分隔）
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# 大模型API配置
# 是否启用大模型API（true/false，不启用则使用模拟结果）
LLM_ENABLED=true

# API提供商（openai/baidu/alibaba/custom）
LLM_PROVIDER=openai

# API密钥（必需，如果LLM_ENABLED=true）
LLM_API_KEY=sk-72793a08285be52def0dfbacacdcedfbfc4f985bf8162c04e203e7a1b0336f6f

# API地址（可选，使用提供商默认地址时可留空）
LLM_API_URL=https://api.qnaigc.com/v1

# 模型名称（必需，七牛云AI支持的模型）
# 七牛云AI支持的模型示例：
# - deepseek-v3 (推荐)
# - gpt-4
# - gpt-3.5-turbo
# - claude-3-opus
# 可以通过 GET https://api.qnaigc.com/v1/models 查看所有可用模型
# 如果遇到 "no available channels for model" 错误，请使用支持的模型名称
LLM_MODEL=deepseek-v3

# 温度参数（0-1，控制随机性，默认0.7）
LLM_TEMPERATURE=0.7

# 最大token数（默认2000）
LLM_MAX_TOKENS=2000

# 请求超时时间（毫秒，默认30000）
LLM_TIMEOUT=30000